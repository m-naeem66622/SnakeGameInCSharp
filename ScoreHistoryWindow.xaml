<Window x:Class="SnakeGame.ScoreHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Score History"
        Height="520"
        Width="420"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        Background="#050B16">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="CaptionText">
            <Setter Property="Foreground" Value="#9AA6C7" />
            <Setter Property="FontSize" Value="13" />
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="#0F1425" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A2138" />
                </Trigger>
                <DataTrigger Binding="{Binding IsBest}" Value="True">
                    <Setter Property="Background" Value="#182943" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Margin="24" Background="#070D18" CornerRadius="18" Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Session Score History"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold" />

            <TextBlock x:Name="BestScoreLabel"
                       Grid.Row="1"
                       Style="{StaticResource CaptionText}"
                       Text="Best Score: 0"
                       Margin="0,12,0,12" />

            <Grid Grid.Row="2">
                <ListView x:Name="ScoresList"
                          BorderThickness="0"
                          Background="#0C1323"
                          Foreground="White"
                          HorizontalContentAlignment="Stretch">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridViewColumn Header="#" DisplayMemberBinding="{Binding Rank}" Width="40" />
                            <GridViewColumn Header="Score" DisplayMemberBinding="{Binding Score}" Width="120" />
                            <GridViewColumn Header="When" DisplayMemberBinding="{Binding Timestamp}" Width="180" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <TextBlock x:Name="EmptyHint"
                           Text="No completed runs yet. Finish a game to start building history."
                           Foreground="#94A3B8"
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="24" />
            </Grid>

            <Button Grid.Row="3"
                    Content="Close"
                    Width="100"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0"
                    Padding="10,6"
                    Background="#1F2A44"
                    BorderBrush="#4B5D89"
                    Click="CloseButton_Click" />
        </Grid>
    </Border>
</Window>
