<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neon Snake" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#0F1723"
        KeyDown="Window_KeyDown">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <!-- Game Area -->
        <Border Grid.Column="0" CornerRadius="12" Background="#0B1220" Padding="12" Effect="{DynamicResource DropShadow}">
            <Grid>
                <Canvas x:Name="GameCanvas" Background="#071018" ClipToBounds="True" />
                <!-- overlay for modern grid -->
                <Rectangle Opacity="0.035" Fill="White" />
            </Grid>
        </Border>

        <!-- Sidebar HUD -->
        <Border Grid.Column="1" Margin="16,0,0,0" Padding="18" CornerRadius="12" Background="#071427" >
            <!-- Removed Spacing property, replaced with Margin on children for spacing -->
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Neon Snake" Foreground="#AEE6FF" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>
                <TextBlock x:Name="ScoreText" Text="Score: 0" Foreground="White" FontSize="16" Margin="0,0,0,12"/>
                <TextBlock x:Name="LevelText" Text="Level: 1" Foreground="White" FontSize="16" Margin="0,0,0,12"/>
                <TextBlock x:Name="SpeedText" Text="Speed: Normal" Foreground="White" FontSize="16" Margin="0,0,0,12"/>

                <Separator Margin="0,8" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border CornerRadius="8" Background="#00C2A8" Margin="0,0,8,0">
                        <Button x:Name="StartButton"
                                Click="StartButton_Click"
                                Padding="10,6"
                                Width="90"
                                Background="Transparent"
                                Foreground="Black"
                                BorderThickness="0">
                            Start
                        </Button>
                    </Border>

                    <Border CornerRadius="8" Background="#FFD166">
                        <Button x:Name="PauseButton"
                                Click="PauseButton_Click"
                                Padding="10,6"
                                Width="90"
                                Background="Transparent"
                                Foreground="Black"
                                BorderThickness="0">
                            Pause
                        </Button>
                    </Border>
                </StackPanel>

                <Border CornerRadius="8" Background="#FF6B6B" Margin="0,12,0,0">
                    <Button x:Name="ResetButton"
            Click="ResetButton_Click"
            Padding="8"
            Background="Transparent"
            Foreground="White"
            BorderThickness="0"/>
                </Border>

                <Separator Margin="0,8" />

                <TextBlock Text="Controls" Foreground="#AEE6FF" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBlock Text="Arrow keys / WASD" Foreground="White" Margin="0,0,0,12"/>

                <Separator Margin="0,8" />

                <TextBlock Text="Legend" Foreground="#AEE6FF" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="18" Height="18" Fill="#3EE3A7" RadiusX="4" RadiusY="4"/>
                    <TextBlock VerticalAlignment="Center" Foreground="White" Margin="8,0,0,0">Food</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <Rectangle Width="18" Height="18" Fill="#FFD166" RadiusX="4" RadiusY="4"/>
                    <TextBlock VerticalAlignment="Center" Foreground="White" Margin="8,0,0,0">Bonus (temporary)</TextBlock>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="0,20,0,0">
                    <TextBlock Text="Tip: Bonus gives 5× points and disappears quickly." Foreground="#94A3B8" TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="18" ShadowDepth="6" Color="#062033" Opacity="0.7" />
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>
</Window>
